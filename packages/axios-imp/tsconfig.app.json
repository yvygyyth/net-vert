{
  "compilerOptions": {
    "incremental": false,
    "tsBuildInfoFile": null,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "declaration": true,
    "declarationDir": "dist/types",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/test/requestor.test.js"],
  "exclude": [
    "src/test/**/*"
  ]
}
